@using Microsoft.AspNetCore.Identity
@model List<Movie>

@inject FilmProj.Services.AuthService x

@{
    bool superUserLogin = User.IsInRole("SuperAdmin"); //ser om inloggad e super user.
    bool categoryLogin = User.IsInRole("CategoryAdmin");

    if (superUserLogin)
    {
        ViewData["Title"] = "Super User Moviez";
    }
    else
    {
        ViewData["Title"] = "User Moviez";
    }
}
@*@foreach(Movie m in Model)
{
    <p>@m.Title</p>
}*@

@if (superUserLogin || categoryLogin)
{
    <div class="row justify-content-around">
        @if (superUserLogin)
        {
            <partial name="ToWatch" />
        }
        <partial name="Watched" />
    </div>
}
else
{
    <div class="row justify-content-center">
        <i class="fa fa-heartbeat" style="font-size: 200px"></i>
    </div>
    <div class="row justify-content-center">
        <h2>You are not logged in.</h2>
    </div>
    <div class="row justify-content-center">
        <h4>Please login</h4>
    </div>
    <div class="row justify-content-center" style="font-size: 8px;">
        <p>Please</p>
    </div>

}





