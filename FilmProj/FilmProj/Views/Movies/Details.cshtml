@model FilmProj.Models.Movie

    <div class="container">
  <div class="row">
      <div class="col-md">
          <img src="@Model.ImgUrl" />
          </div>
      
      <div class="col-md">
          <div class="container" style="height:400px">
              <div class="row" style="height:15%">
                  <h1>@Model.Title</h1>

              </div>
              <div class="row" style="height:10%">
                  <b>Director: @Model.Director</b>
</div>
                  <div class="row" style="height:60%">
                      <p>@Model.Description</p>
                  </div>

                  <div class="row" style="height:30%">
                      <p>
                          <a class="links" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                          <a class="links" asp-action="Edit" asp-route-id="@Model.Id">To watch</a>
                          <a class="links" asp-action="Edit" asp-route-id="@Model.Id">Watched</a>
                        

                      </p>
                  </div>
              </div>

          </div></div></div>